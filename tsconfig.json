{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": ["node", "vscode"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "out"]
}
