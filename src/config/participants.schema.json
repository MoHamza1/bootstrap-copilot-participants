{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Participants Configuration",
  "type": "object",
  "required": ["participants"],
  "properties": {
    "participants": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "entry", "title"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "entry": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "capabilities": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
